            <section>
                <div class="main">
                    <h2>
                        <input type="text" placeholder="Filter title" value="{{current_filter}}" />
                    </h2>
                    <div class="view">
                        <div class="content">
                            <ul class="rules">
                                {{#filter}}
                                {{> filter_tree}}
                                <p class="total">3 sites matched under these rules</p>
                                {{/filter}}
                            </ul>
                        </div>
                        <div class="content">
                            <ul class="notifications">
                                <label><input type="checkbox"> Configure notifications on this site filter</label>
                            </ul>
                        </div>
                    </div>
                    <nav class="context">
                        <div class="actions">
                            <button>Save filter <span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
                            <button>Cancel changes <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                            <button>Delete filter <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                        </div>
                    </nav>
                </div>
            </section>